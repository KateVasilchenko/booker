{{#if periodName}}
    <div class="select-date">
        <span class="fa fa-angle-left change-period" {{action 'changePeriod' 'left'}}></span>
        <span class="">{{periodName}}</span>
        <span class="fa fa-angle-right change-period" {{action 'changePeriod' 'right'}}></span>
    </div>
{{/if}}
<div class="btn btn-group">
    <div class="btn btn-category" {{action 'filterByTime' 'week'}} id="week">Week</div>
    <div class="btn btn-category" {{action 'filterByTime' 'month'}} id="month">Month</div>
    <div class="btn btn-category" {{action 'filterByTime' 'year'}} id="year">Year</div>
</div>