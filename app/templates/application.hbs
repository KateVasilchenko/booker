<div id="wrapper" class="wrapper">
  <div id="sidebar-wrapper" class="sidebar">
    <div class="sidebar-top-block"></div>
    <ul class="sidebar-nav">
      <li>
        {{#link-to "dashboard"}} <i class="sidebar-icon fa fa-th-large"></i><span>Dashboard</span>{{/link-to}}
      </li>
      <li>
        {{#link-to "transactions"}}<i class="sidebar-icon fa fa-exchange"></i><span>Transactions</span>{{/link-to}}
      </li>
      <li>
        {{#link-to "wallets"}}<i class="sidebar-icon sidebar-icon--wallets"></i><span>Wallets</span>{{/link-to}}
      </li>
    </ul>
    <div class="sidebar-bottom-block"></div>
  </div>
  <div class="content">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
          <div class="nav navbar-nav">
            <span id="hamburger" {{action 'toggleSidebar'}} class="navbar-toggle burger-btn">
              <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </span>
            {{#each flashMessages.queue as |flash|}}
              {{#flash-message flash=flash as |component flash|}}
                <p class="alert-message">{{flash.message}}</p>
                <button type="button" class="close"><i class="fa fa-times" aria-hidden="true"></i></button>
              {{/flash-message}}
            {{/each}}
          </div>
            {{#link-to "dashboard" classNames="navbar-brand" }}Booker{{/link-to}}
            <div class='add-btns {{if disabledButtons "disabled" ""}}'>
              <button {{action "addTransaction"}} class="transaction-btn" id="transaction-quick-add">
                <i class="nav-icon icon--circle m-hidden"></i>
                <span class="">Add transaction</span>
              </button>
              <button {{action "addWallet"}} class="wallet-btn" id="wallet-quick-add">
                <i class="nav-icon nav-icon--green icon--circle m-hidden"></i>
                <span class="">Add wallet</span>
              </button>
            </div>
          </div>
        </div>
        {{dropdown-dialog resetDropdownModel="resetDropdownModel" disabledButtons=disabledButtons transaction=transaction wallet=wallet isHidden=hidden categories=model.categories wallets=model.wallets}}
      </nav>
      <div class="content-wrap">
        <div id="page-content-wrapper" class="content-wrapper">
          <div class="container-fluid">
            {{outlet}}
          </div>
        </div>
    </div>
  </div>
</div>
