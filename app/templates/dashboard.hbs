<div class="row">
    <div class="col-md-3">
        <div class="panel panel-default panel-wallets">
            <div class="panel-heading">
                <h3 class="panel-title">Wallets</h3>
            </div>
            <div class="panel-body">
                <div class="row balance">
                    <div class="col-md-6"><h2>Balance</h2></div>
                    <div class="col-md-6"><h2>{{balance}}</h2></div>
                </div>
                <ul class="list-unstyled">
                    {{#each wallets as |wallet|}}
                        <li>{{wallet.name}} - {{wallet.balance}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default panel-charts">
            <div class="panel-heading">
                <h3 class="panel-title">Statistics</h3>
            </div>
            <div class="panel-body">
                Charts
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default panel-charts">
    <div class="panel-heading">
        <h3 class="panel-title">Recent transactions</h3>
    </div>
    <div class="panel-body">
        <ul class="transactions-list">
            {{#each (reverse transactions) as |transaction index|}}
                {{#if (lt index 5)}}
                    <li>{{transaction.category.color}} - {{transaction.category.name}} - {{transaction.amount}} - {{format-date transaction.createdAt}} - {{transaction.wallet.name}}</li>
                {{/if}}
            {{/each}}
        </ul>
        {{#link-to 'transactions'}}All transactions{{/link-to}}
    </div>
</div>

